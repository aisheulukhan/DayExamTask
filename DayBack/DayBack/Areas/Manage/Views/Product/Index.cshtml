@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
    int order = 1;
}

<a asp-action="Create" asp-controller="Product" class="btn btn-outline-success">Create</a>
<table class="table text-center table-bordered my-4">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>CategoryId</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@(order++)</td>
            <td><img width="50" src="/image/@item.Image" /></td>
            <td>@item.Title</td>
            <td>@item.Desc</td>
            <td>@item.CategoryId</td>
            <td><a asp-action="Edit" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning">Edit</a></td>
            <td>
                <form method="post" asp-action="Delete" asp-route-id="@item.Id">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
